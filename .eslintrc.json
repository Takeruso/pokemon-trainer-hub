{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "espree",
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "vue/multi-word-component-names": "off"
    },
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    }
  }
  